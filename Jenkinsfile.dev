        ARTIFACTORY_API_KEY = credentials('artifactory-api-key')
    }

    stages {
        stage('Test') {
            steps {
                sh 'echo "dummy test" '
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true -Dcheckstyle.skip clean package'
